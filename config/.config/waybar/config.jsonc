{
  "layer": "bottom",
  "position": "bottom",
  "height": 40,
  "spacing": 2,
  "exclusive": true,
  "gtk-layer-shell": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window",
    "cpu",
    "memory"
  ],
  "modules-center": ["keyboard-state", "custom/hostname", "keyboard-state"],
  "modules-right": [
    "custom/battery",
    "pulseaudio",
    "clock",
    "clock#simpleclock",
    "tray"
  ],
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{id}",
    "all-outputs": true,
    "disable-scroll": false,
    "active-only": false
  },
  "hyprland/window": {
    "format": "App: {class}"
  },
  "tray": {
    "show-passive-items": true,
    "spacing": 10
  },

  "custom/battery": {
    "exec": "~/.config/waybar/battery-status.sh",
    "interval": 60
  },

  "clock#simpleclock": {
    "interval": 10,
    "format": "{:%H:%M}",
    "tooltip-format": "{:%H:%M:%S}"
  },
  "clock": {
    "format": "{:L%a %d %b}",
    "tooltip-format": "<tt><big>{calendar}</big></tt>",
    "locale": "en_DK.UTF-8",
    "calendar": {
        "mode"          : "year",
        "mode-mon-col"  : 3,
        "format": {
            "months":     "<span color='#ffead3'><b>{}</b></span>",
            "days":       "<span color='#ecc6d9'><b>{}</b></span>",
            "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
            "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
        }
    },
    "actions":  {
        "on-click-right": "mode"
    }
  },

  "cpu": {
    "format": "CPU: {usage}%",
    "tooltip": true,
    "interval": 0.1,
    "on-click": "kitty htop --sort-key PERCENT_CPU"
  },
  "memory": {
    "format": "RAM: {used:0.1f}GB",
    "tooltip": true,
    "interval": 0.1,
    "on-click": "kitty htop --sort-key PERCENT_MEM"
  },
  "pulseaudio": {
    "format": "Sound: {volume}%",
    "format-muted": "Sound: muted",
    "on-click": "pavucontrol"
  },
  "keyboard-state": {
    "numlock": true,
    "format": "{icon}",
    "format-icons": {
      "locked": "",
      "unlocked": "NUMLOCK IS OFF!"
    }
  },
  "custom/hostname": {
    "exec": "cat /etc/hostname",
    "interval": 3600
  }
}
